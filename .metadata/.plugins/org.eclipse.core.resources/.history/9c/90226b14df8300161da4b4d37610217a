
public class Producer extends Thread {
	int[] a;
	
	@Override
	public synchronized void start() {
		System.out.println("Starting Producer thread.");
		a = new int[Lab2.n];
		super.start();
	}

	@Override
	public void run() {
		while (Lab2.p < Lab2.n) {
			while (Lab2.p != Lab2.c);
			Lab2.buf = a[Lab2.p];
			Lab2.p = Lab2.p + 1;
		} 
		
	}
	
}
