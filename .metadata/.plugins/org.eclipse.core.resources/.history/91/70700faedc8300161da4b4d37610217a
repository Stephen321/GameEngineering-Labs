
public class Producer extends Thread {
	int[] a;
	
	
	@Override
	public synchronized void start() {
		a = new int[Lab2.n];
	}

	@Override
	public void run() {
		while (Lab2.p < Lab2.n) {
		//< await (Lab2.p == Lab2.c); >
		while (Lab2.p != Lab2.c);
			Lab2.buf = a[Lab2.p];
			Lab2.p = Lab2.p + 1;
		} 
		
	}
	
}
