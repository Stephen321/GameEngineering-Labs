
public class Consumer extends Thread {
	int[] b;

	@Override
	public synchronized void start() {
		System.out.println("Starting Consumer thread.\nValues in a:");
		b = new int[Lab2.n];
		for (int i = 0; i < Lab2.n; i++){
			a[i] = ran.nextInt(100);
			System.out.print(a[i] + ", ");
		}
		System.out.println();
		super.start();
	}
	
	@Override
	public void run() {
		while (Lab2.p < Lab2.n) {
			while (! (Lab2.p > Lab2.c));
			b[Lab2.c] = Lab2.buf;
			Lab2.c = Lab2.c + 1;
			System.out.println("c: " + Lab2.c +  " p: " + Lab2.p + " buf: " + Lab2.buf);
		} 
		System.out.println("Consumer thread has finished.");
		
	}
	
}
